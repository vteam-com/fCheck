# fCheck Configuration File
# This file allows you to configure global ignore settings for fCheck analysis

input:
  exclude:
    - "**/example/**"

analyzers:
  default: on
  options:
    duplicate_code:
      similarity_threshold: 0.90 # Percentage of similarity (0.0 to 1.0)
      min_tokens: 20 # Minimum number of tokens to consider for duplication
      min_non_empty_lines: 8 # Minimum number of non-empty lines to consider for duplication
